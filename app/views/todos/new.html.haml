%main
  .sideber
    =link_to "7days to do", root_path
    =link_to "新規作成", new_todo_path
  .contents
    .todos
      .new-todo-form
        %h1 新規作成
        =form_with model: @todo do |f|
          = f.label :name, "タイトル"
          = f.text_field :name
          = f.label :description, "詳細"
          = f.text_area :description
          = f.label :deadline, "期日"
          = f.date_field :deadline, id: "deadline-form"
          = f.submit "送信", class: "send"
    .calendar
      #calendar
